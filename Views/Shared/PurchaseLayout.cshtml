<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <style>
        font-face {
            font-family: "Muli-Regular";
            src: url('../fonts/muli/Muli-Regular.ttf');
        }

        font-face {
            font-family: "Muli-SemiBold";
            src: url('../fonts/muli/Muli-SemiBold.ttf');
        }

        body {
            font-family: "Muli-Regular";
            background-color: #f8f9fa;
        }

        .wrapper {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            padding: 20px;
        }

        .confirmation-container {
            background: #fff;
            padding: 40px;
            border-radius: 15px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            max-width: 600px;
            width: 100%;
        }

        h1, h2 {
            text-align: center;
            font-family: "Muli-SemiBold";
            color: #333;
            margin-bottom: 30px;
        }

        h3, h4 {
            font-family: "Muli-SemiBold";
            color: #333;
        }

        p {
            font-size: 16px;
            color: #666;
            margin-bottom: 20px;
        }

        button {
            width: 100%;
            height: 45px;
            background-color: #28a745;
            color: #fff;
            border: none;
            border-radius: 5px;
            font-family: "Muli-SemiBold";
            font-size: 16px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        button:hover {
            background-color: #218838;
        }

        .hidden-inputs {
            display: none;
        }

    </style>
</head>
<body>
        <div class="wrapper">
            <div class="confirmation-container">
                @RenderBody()
            </div>
        </div>
</body>
</html>
